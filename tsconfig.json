{
    "compilerOptions": {
        "baseUrl": "./src",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noEmit": false,
        "noEmitOnError": false,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "module": "commonJS",
        "noImplicitAny": true,
        "target": "ES6",
        "removeComments": true,
        "preserveConstEnums": false,
        "outDir": "./dist",
        "rootDir": "./src/",
        "sourceMap": true,
        "lib": ["es6", "dom", "es2017", "es7"],
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    }
}